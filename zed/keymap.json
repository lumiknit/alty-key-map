[
	{
		"bindings": {
			"alt-\\": "workspace::ToggleLeftDock",
			"super-\\": "workspace::ToggleLeftDock",
			"alt-|": "workspace::ToggleRightDock",
			"super-|": "workspace::ToggleRightDock",
			"alt-'": "workspace::ToggleBottomDock",
			"super-'": "workspace::ToggleBottomDock",
			"alt-\"": "workspace::NewCenterTerminal",
			"super-\"": "workspace::NewCenterTerminal",
			"alt-p": "file_finder::Toggle",
			"shift-alt-p": "command_palette::Toggle",
			"alt-s": "workspace::Save",
			"shift-alt-s": "workspace::SaveAs",
			"alt-q": "pane::CloseActiveItem",
			"shift-alt-q": "workspace::CloseAllItemsAndPanes",
			"shift-alt-f": "workspace::NewSearch",
			"shift-alt-r": "workspace::NewSearch"
		}
	},
	{
		"context": "Editor",
		"bindings": {
			"shift shift": "file_finder::Toggle",
			"alt-a": "editor::SelectLine",
			"shift-alt-a": "editor::SelectAll",
			"alt-b": "editor::AddSelectionBelow",
			"shift-alt-b": "editor::AddSelectionBelow",
			"alt-c": "editor::Copy",
			"alt-d": "editor::Delete",
			"shift-alt-d": "editor::DeleteToNextWordEnd",
			"alt-e": "editor::OpenSelectedFilename",
			"shift-alt-e": "workspace::Open",
			"alt-g": "go_to_line::Toggle",
			"alt-h": "editor::MoveLeft",
			"shift-alt-h": "editor::SelectLeft",
			"alt-j": ["editor::MoveDownByLines", { "lines": 1 }],
			"shift-alt-j": ["editor::SelectDownByLines", { "lines": 1 }],
			"ctrl-alt-j": "editor::JoinLines",
			"alt-k": ["editor::MoveUpByLines", { "lines": 1 }],
			"shift-alt-k": ["editor::SelectUpByLines", { "lines": 1 }],
			"alt-l": "editor::MoveRight",
			"shift-alt-l": "editor::SelectRight",
			"alt-n": "workspace::NewFile",
			"alt-o": "editor::MoveToEndOfLine",
			"shift-alt-o": "editor::SelectToEndOfLine",
			"alt-u": "editor::MoveToPreviousSubwordStart",
			"shift-alt-u": "editor::SelectToPreviousSubwordStart",
			"alt-i": "editor::MoveToNextSubwordEnd",
			"shift-alt-i": "editor::SelectToNextSubwordEnd",
			"alt-v": "editor::Paste",
			"alt-x": "editor::Cut",
			"shift-alt-x": "editor::CutToEndOfLine",
			"alt-y": [
				"editor::MoveToBeginningOfLine",
				{
					"stop_at_indent": true
				}
			],
			"shift-alt-y": [
				"editor::SelectToBeginningOfLine",
				{
					"stop_at_indent": true
				}
			],
			"alt-z": "editor::Undo",
			"shift-alt-z": "editor::Redo",
			"alt-,": "editor::HalfPageUp",
			"alt-<": "editor::HalfPageUp",
			"alt-.": "editor::HalfPageDown",
			"alt->": "editor::HalfPageDown",
			"alt-/": "editor::MoveToEnd",
			"alt-?": "editor::MoveToBeginning",
			"alt-;": "editor::Tab"
		}
	},
	{
		"context": "Editor && mode == full",
		"bindings": {
			"alt-f": [
				"buffer_search::Deploy",
				{
					"focus": true
				}
			],
			"alt-r": [
				"buffer_search::Deploy",
				{
					"focus": true,
					"replace_enabled": true
				}
			]
		}
	},
	{
		"context": "Editor && showing_completions",
		"bindings": {
			"alt-;": "editor::ConfirmCompletion"
		}
	},
	{
		"context": "Editor && showing_code_actions",
		"bindings": {
			"alt-;": "editor::ConfirmCodeAction"
		}
	},
	{
		"context": "Editor && (showing_code_actions || showing_completions)",
		"bindings": {
			"alt-k": "editor::ContextMenuPrevious",
			"alt-j": "editor::ContextMenuNext",
			"alt-y": "editor::ContextMenuFirst",
			"alt-,": "editor::ContextMenuFirst",
			"alt-<": "editor::ContextMenuFirst",
			"alt-o": "editor::ContextMenuLast",
			"alt-.": "editor::ContextMenuLast",
			"alt->": "editor::ContextMenuLast",
			"alt-l": "editor::ConfirmCompletion",
			"alt-h": "editor::Cancel"
		}
	},
	{
		"context": "BufferSearchBar",
		"bindings": {
			"alt-f": "search::SelectNextMatch",
			"shift-alt-f": "search::SelectPreviousMatch"
		}
	}
]
